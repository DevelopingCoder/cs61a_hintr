<h1>All Users</h1>
<table id="Users">
  <thead>
    <tr>
      <th>Admin</th>
      <th>Name</th>
      <th>Email</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= check_box_tag user.email + "_admin_checkbox", user.admin?, user.admin?, {disabled: !current_user.admin?}%>
        </td>
        <td>
          <%= user.name  %>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= check_box_tag "delete_emails[]", "delete_" + user.email %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%if current_user.admin? %>
  <div class="form-group">
    <%=form_tag(display_users_path, :method => :post) do %> 
      <%= label_tag("User Email") %>
      <%= email_field_tag("add_email") %>
      <%= submit_tag("Add") %>
    <% end %>
  </div>
  <div class="form-group">
    <%=form_tag(display_users_path, :method => :put) do %>
      <%= submit_tag("Delete Emails") %>
    <% end %>
  </div>
<% end %>
