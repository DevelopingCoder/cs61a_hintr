<h1>All Users</h1>
<div class="form-group">
  <%=form_tag(display_users_path, :method => :put) do %>
    <table id="Users">
      <thead>
        <tr>
          <th>Admin</th>
          <th>Name</th>
          <th>Email</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <% if current_user.admin? %>
                <input type="checkbox" />
              <% else %>
                <input type="checkbox" disabled="disabled"/>
              <% end %>
            </td>
            <td>
              <%= user.name  %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <%= check_box_tag("delete_emails[]", user.email, false, :disabled => 
                    !current_user.admin, :id => "delete_" + user.email) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= submit_tag("Delete Emails") %>
  <% end %>
</div>

<%if current_user.admin? %>
  <div class="form-group">
    <%=form_tag(display_users_path, :method => :post) do %> 
      <%= label_tag("User Email") %>
      <%= email_field_tag("add_email") %>
      <%= submit_tag("Add") %>
    <% end %>
  </div>
<% end %>

