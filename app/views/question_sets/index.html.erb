<h1>Question Sets</h1>

<% if current_user.admin %>
  <div id="threshold-display">
    <%= "Current threshold: " + @hint_threshold.to_s%>
  </div>
  <%= form_tag(edit_hint_threshold_path, :method => :post) do %>
    <%= text_field_tag("threshold", nil, :placeholder => "Edit threshold", :required => true)%>
    <%= submit_tag("Change") %>
  <% end %>
<% end %>
<% @question_sets.each do |question_set| %>
  <div><%= link_to question_set.name, question_set_path(question_set.id) %></div>
<% end %>
